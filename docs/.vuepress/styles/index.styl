@require './palette.styl'
@require './markdown.styl'

//滚动条样式
::-webkit-scrollbar
  width: 6px !important;
/*滚动条的设置*/
::-webkit-scrollbar-thumb {
	background-color: $accentColor !important; 
	background-clip:padding-box !important; 
	-webkit-border-radius: 10em !important; 
	-moz-border-radius: 10em !important; 
	border-radius: 10em !important; 
}
/*滚动条凹槽的颜色，还可以设置边框属性 */
::-webkit-scrollbar-track-piece {
	background-color:transparent !important; 
	-webkit-border-radius: 0em !important; 
	-moz-border-radius: 0em !important; 
	border-radius: 0em !important; 
}
/*滚动条鼠标移上去*/
::-webkit-scrollbar-thumb:hover {
	background-color:#bbb !important; 
}

img[alt="npm"]+span
  display none

@keyframes changeright{       
  0%{-webkit-transform:rotate(0deg);}
  50%{-webkit-transform:rotate(180deg);}
  100%{-webkit-transform:rotate(360deg);}
}

@keyframes changeleft{
  0%{-webkit-transform:rotate(0deg);}
  50%{-webkit-transform:rotate(-180deg);}
  100%{-webkit-transform:rotate(-360deg);}
}

header.navbar
  background: rgba(0, 0, 0, 0.3);
  backdrop-filter: blur(4px);
  padding: 0 calc(calc(100vw - 960px) / 2)
  display: flex
  align-items: center
  justify-content: space-between
  *
    color: rgba(255, 255, 255, 0.8)!important
  > *
    color: rgba(255, 255, 255, 0.8)!important
    position relative!important
    top: 0!important
    left: 0!important
    right: 0!important
    bottom: 0!important
  .dropdown-wrapper
    .iconfont
      display none
  .links
    max-width initial!important
    background: transparent
    .nav-links
      .nav-item 
        a
          >.iconfont
            display: none
  .router-link-active
    .logo
      animation:changeright 6s linear infinite
  .suggestions
    height 60vh
    overflow auto
    *
      color: var(--text-color)!important
  .nav-dropdown
    *
      color: var(--text-color)!important
    .dropdown-item:hover
      overflow hidden
      a
        transform: translateX(10px)
        transition: all 0.5s;



.side-bar
  .sidebar-link
    background transparent

.level-2
  font-size 16px
  .sidebar-link
    font-weight 600

.level-3
  font-size 14px
  padding-left 0.9rem!important
  &:not(.active)
    opacity .6
  .sidebar-link
    font-weight 400
  
.home-blog 
  .hero
    margin-top 0!important
    padding 0!important
    > div
      backdrop-filter: blur(4px);
      background-color rgba(0, 0, 0, 0.2)
      width: 100%;
      height: 100%;
      display: flex;
      align-items: center;
      flex-direction: column;
      justify-content: center;
    h1,
    .description
      color: #fff
  .blog-list
    .abstract-item
      .abstract
        opacity .6
      .abstract+div 
        .reco-account
          display: none
  .home-blog-wrapper
    max-width: 880px!important
    .info-wrapper
      flex: 0 0 240px!important
      .personal-info-wrapper+h4
      .personal-info-wrapper+h4+.category-wrapper
      .personal-info-wrapper+h4+.category-wrapper+hr
        display none




.tags
  .tag-item
    padding: 2px 5px;
    border-radius: 2px;
  span
    background-color rgba(86, 86, 86, .5)!important
    color: var(--text-color-sub)!important



.page
  padding: 5rem 0rem 0rem 0rem!important
  max-width 880px
  margin: 0 auto!important
  position relative
  .side-bar
    // right: calc(calc(100vw - 900px) / 2 - 12rem)!important
    left: calc(calc(100vw - 900px) / 2 - 12rem)!important
  .page-title
    padding-bottom 0rem!important
    max-width 880px!important
    &:after
      content: ''
      display: block
      margin: 0 auto
      padding-top 2rem!important
      border-bottom: 1px solid $accentColor
    .title+div 
      .iconfont.reco-account
        display: none
  .content__default:not(.custom)
    max-width 880px


.iconfont:before
  color: $accentColor!important

.abstract-wrapper
  .abstract-item
    border-radius 8px!important

.footer-wrapper
  > span:first-child
    display: none!important


// 时间线样式
.timeline-wrapper 
  .year
    margin: 80px 0px 20px !important;
    font-size: 27px !important;
  .timeline-content 
    .year-wrapper 
      li 
        transition: all .5s;
        .title
          color: var(--text-color)!important
        &:hover
          transform:  translate(24px,0);
          transition: all .5s;
          .title
            color: var(--color-brand)!important


// 搜索框
.search-box 
  .iconfont:before
    color rgba(255, 255, 255, .2)!important
  input:focus
    display: fixed

.personal-info-wrapper 
  .personal-img
    border-radius: 4px!important


// wide mobile
@media (max-width: 719px)
  aside.sidebar
    backdrop-filter: blur(4px);
    background-color rgba(0, 0, 0, 0.2)

  .theme-container
    .sidebar-mask
      display: none;
      transition: opacity .3s;
    &.sidebar-open
      .sidebar-mask
        display: initial;
        opacity 1
        z-index 10

  .home-blog 
    .hero
      height: 400px!important
  .pagation
    .pagation-list
      margin-bottom 10px
      .jumppoint,
      .jumpinp,
      .gobtn
          display none
  .category-wrapper
    .category-item
      box-shadow none!important
      border-bottom 1px #ddd dashed
      border-radius 0!important
    & + hr
      border: none


.content__default 
  p
    code
      color $accentColor!important